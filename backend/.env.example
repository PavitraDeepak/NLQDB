# Server Configuration
NODE_ENV=development
PORT=5000

# MongoDB Configuration
MONGO_URI=mongodb://mongo:27017/nlqdb
MONGO_USER=admin
MONGO_PASSWORD=admin123

# Read-only MongoDB User (for query execution)
READONLY_DB_USER=nlq_readonly
READONLY_DB_PASS=readonly123

# JWT Configuration
JWT_SECRET=your-secret-key-change-in-production
JWT_EXPIRE=7d

# LLM Configuration - Google AI Studio
LLM_PROVIDER=google
GOOGLE_AI_API_KEY=your-google-ai-api-key-here
LLM_MODEL=gemini-pro
LLM_TEMPERATURE=0.0
LLM_MAX_TOKENS=800

# Alternative: OpenAI Configuration (if you prefer)
# LLM_PROVIDER=openai
# OPENAI_API_KEY=sk-your-api-key-here
# LLM_MODEL=gpt-4

# Redis Configuration (optional)
REDIS_URL=redis://redis:6379
REDIS_ENABLED=true

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Query Execution Limits
MAX_PIPELINE_STAGES=10
MAX_RESULT_ROWS=10000
QUERY_TIMEOUT_MS=30000

# Logging
LOG_LEVEL=info
